<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_verTares"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerTareasFragment">

    <ListView
        android:id="@+id/listTareasEdit"
        android:layout_width="316dp"
        android:layout_height="272dp"
        app:layout_constraintBottom_toTopOf="@id/buttonAgregarTareas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.446" />

    <ImageButton
        android:id="@+id/buttonAgregarTareas"
        android:layout_width="106dp"
        android:layout_height="95dp"
        android:layout_marginBottom="28dp"
        android:background="@null"
        android:src="@drawable/add_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TableLayout>

    <TableRow
        android:layout_width="409dp"
        android:layout_height="307dp"
        android:background="#03BDD8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.362">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Nombre"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DescripciÃ³n"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/estado"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Estado"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fecha"
            android:layout_width="61dp"
            android:layout_weight="1"
            android:text="Fecha"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editar"
            android:layout_width="wrap_content"
            android:text="Editar"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eliminar"
            android:layout_width="wrap_content"
            android:text="Eliminar"
            android:textSize="18sp"
            android:textStyle="bold" />

    </TableRow>


</androidx.constraintlayout.widget.ConstraintLayout>